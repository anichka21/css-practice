<header class="header">
    <a href="#test">
        {{> logo}}  
    </a>
    <nav class="header_nav">
        <div class="header_nav_right">
        {{> nav list= header}}
        </div>
    </nav>
</header>

<main class="main">

    <div class="info">
    {{#with info}}
    <h2 class="info_title">{{title}}</h2>
    <p class="info_text">{{description}}</p>
   {{/with}}
     </div>

    {{#with form}}
    <div class="form">
        <h2 class="form_title">{{title}}</h2>
        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form-input-{{id}}">
            {{/each}}
        </div>
        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <div class="form_linia"></div>
        <p class="form_info">{{info}}</p>
    </div>
    {{/with}}
</main>

<div class="updates">
{{#with updates}}
<h1 class="updates_title">{{title}}</h1>

    {{#each list}}
    <div class="list">
    <div class="block"></div>
    <div class="list_content">
    <div class="list_name">@{{nickname}}</div>
    <p class="list_text">{{description}}</p>
    </div>
    </div>
    {{/each}}

    {{#with show_all}}
    <a href="{{url}}" class="show_all">{{text}}</a>
    {{/with}}

{{/with}}
</div>

<div class="expirience">
    {{#with expirience}}
    <h1 class="expirience_title">{{title}}</h1>
    <div class="exp_badge">{{badge}}</div>

    <div class="content_list">
     {{#each list}}
     <div class="exp_list">
      <div class="name_list">{{name}}</div>
      <p class="text_list">{{details}}</p>
     </div>
     {{/each}}
     </div>
    
    {{/with}}
</div>

<footer class="footer" id="test">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class=footer_title>{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>